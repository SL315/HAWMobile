        <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <android.support.v4.widget.NestedScrollView
                    android:id="@+id/bottom_sheet1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
                    app:behavior_peekHeight="0dp">


                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:id="@+id/et_fach" android:textSize="14sp"
                            android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                            android:layout_toStartOf="@+id/btn_edit" android:hint="Fach" android:enabled="false"/>
                    <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:id="@+id/et_prof" android:textSize="14sp"
                            android:layout_below="@+id/et_fach" android:layout_alignParentStart="true"
                            android:layout_toStartOf="@+id/btn_edit" android:hint="Professor" android:enabled="false"/>
                    <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:id="@+id/et_raum" android:textSize="14sp"
                            android:layout_below="@+id/et_prof" android:layout_alignParentStart="true"
                            android:layout_alignEnd="@+id/et_prof" android:hint="Raum" android:enabled="false"/>
                    <Button
                            android:text="Bearbeiten"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/btn_edit"
                            android:textSize="14sp" android:layout_alignTop="@+id/et_fach"
                            android:layout_alignParentEnd="true"/>
                    <Button
                            android:text="Speichern"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/btn_save"
                            android:textSize="14sp" android:layout_alignTop="@+id/et_fach"
                            android:layout_alignParentEnd="true" android:visibility="gone"/>
                    <Button
                            android:text="Abbrechen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/btn_cancel"
                            android:textSize="14sp"
                            android:layout_below="@+id/btn_save" android:layout_alignParentEnd="true"
                            android:visibility="invisible"/>
                </RelativeLayout>
            </android.support.v4.widget.NestedScrollView>
